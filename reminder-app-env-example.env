# ========================================
# CONFIGURACION APP DE RECORDATORIOS
# Basada en Smart Sales Bot Pro
# ========================================

# ========================================
# CONFIGURACION DE EMAIL (Gmail)
# ========================================
# 1. Ve a: https://myaccount.google.com/apppasswords
# 2. Crea una contraseña de aplicación
# 3. Usa esa contraseña aquí (no tu contraseña normal)

EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password_de_16_caracteres
EMAIL_FROM=tu_email@gmail.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ========================================
# CONFIGURACION WHATSAPP
# ========================================
# Las sesiones se guardan en: ./reminder_sessions/
WHATSAPP_SESSION_PATH=./reminder_sessions

# ========================================
# CONFIGURACION DE LA APP
# ========================================
NODE_ENV=development
APP_NAME=Reminder App
APP_VERSION=1.0.0

# ========================================
# CONFIGURACION DE RECORDATORIOS
# ========================================
# Intervalo de verificación en milisegundos (60000 = 1 minuto)
CHECK_INTERVAL=60000

# Días para mantener recordatorios completados antes de limpiarlos
CLEANUP_DAYS=30

# Zona horaria
TIMEZONE=America/Bogota

# ========================================
# CONFIGURACION DE NOTIFICACIONES
# ========================================
# Habilitar diferentes tipos de notificaciones
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RECURRING_REMINDERS=true
ENABLE_OVERDUE_ALERTS=true

# ========================================
# CONFIGURACION DE SEGURIDAD
# ========================================
# Límites de envío para evitar spam
MAX_WHATSAPP_PER_HOUR=50
MAX_EMAIL_PER_HOUR=100

# ========================================
# CONFIGURACION DE LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/reminder-app.log

# ========================================
# CONFIGURACION AVANZADA
# ========================================
# Reintentos para mensajes fallidos
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Tiempo de espera para conexiones
CONNECTION_TIMEOUT=30000

# ========================================
# EJEMPLOS DE USO
# ========================================
# Para probar la configuración:
# npm run test:email
# npm run test:whatsapp
# npm run connect:whatsapp
# npm run send:test-email
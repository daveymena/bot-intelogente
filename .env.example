# ========================================
# CONFIGURACION: SISTEMA HIBRIDO INTELIGENTE
# ========================================

# ========================================
# SISTEMA HIBRIDO INTELIGENTE
# ========================================
AI_PROVIDER=hybrid
HYBRID_SYSTEM_ENABLED=true
ENABLE_HYBRID_SYSTEM=true
HYBRID_MODE=smart
LOCAL_RESPONSE_PRIORITY=true
AI_USE_REASONING=true
ENABLE_CONTEXTUAL_BRAIN=true

# ========================================
# CONFIGURACION GROQ (IA RAPIDA Y POTENTE)
# ========================================
GROQ_API_KEY=tu_groq_api_key_aqui
GROQ_API_KEY_2=tu_groq_api_key_2_aqui
GROQ_API_KEY_3=tu_groq_api_key_3_aqui
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT=30000
GROQ_MAX_TOKENS=800

# ========================================
# CONFIGURACION OLLAMA (IA LOCAL GRATIS)
# ========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b
OLLAMA_TIMEOUT=180000
OLLAMA_MAX_TOKENS=600
OLLAMA_ENABLED=true

# ========================================
# ROTACION DE PROVEEDORES IA
# ========================================
AI_FALLBACK_ENABLED=true
AI_FALLBACK_ORDER=groq,ollama,local
ROTATE_AI_PROVIDERS=true
PROVIDER_ROTATION_INTERVAL=300000

# ========================================
# BASE DE DATOS
# ========================================
# Para desarrollo local con SQLite:
# DATABASE_URL=file:./dev.db

# Para producción con PostgreSQL:
DATABASE_URL=postgresql://usuario:contraseña@host:5432/nombre_base_datos?sslmode=disable

# ========================================
# NEXT.JS
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# FORMATO DE RESPUESTAS
# ========================================
USE_FORMATTED_RESPONSES=true
USE_EMOJIS=true
USE_BOLD_TEXT=true
RESPONSE_STYLE=professional

# ========================================
# WHATSAPP
# ========================================
WHATSAPP_SESSION_PATH=./auth_sessions

# ========================================
# METODOS DE PAGO
# ========================================
# MercadoPago
MERCADO_PAGO_PUBLIC_KEY=tu_public_key_aqui
MERCADO_PAGO_ACCESS_TOKEN=tu_access_token_aqui
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_aqui
MERCADO_PAGO_CLIENT_ID=tu_client_id_aqui

# PayPal
PAYPAL_CLIENT_ID=tu_paypal_client_id_aqui
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret_aqui
PAYPAL_MODE=sandbox
PAYPAL_API_URL=https://api-m.sandbox.paypal.com

# ========================================
# CONFIGURACION INTELIGENTE
# ========================================
AI_MAX_TOKENS=600
AI_TEMPERATURE=0.7
AI_TIMEOUT=45000

# ========================================
# APRENDIZAJE CONTINUO Y MEMORIA
# ========================================
ENABLE_LEARNING_SYSTEM=true
CONVERSATION_LEARNING=true
MEMORY_PERSISTENCE=true
CONTEXT_RETENTION_HOURS=48

# ========================================
# DETECCION AVANZADA DE INTENCIONES
# ========================================
ADVANCED_INTENT_DETECTION=true
MULTI_INTENT_PROCESSING=true
CONTEXT_AWARE_RESPONSES=true

# ========================================
# MANEJO DE OBJECIONES Y PREGUNTAS
# ========================================
OBJECTION_HANDLING_ENABLED=true
FAQ_AUTO_RESPONSES=true
SALES_CLOSING_ASSISTANT=true

# ========================================
# ENVIO AUTOMATICO DE FOTOS
# ========================================
AUTO_PHOTO_SENDING=true
SMART_PHOTO_DECISIONS=true
PHOTO_RETRY_ENABLED=true

# ========================================
# SISTEMA COMPLETO ACTIVADO
# ========================================
FULL_SYSTEM_ACTIVATED=true
INTELLIGENT_MODE=maximum
SALES_OPTIMIZATION=true
CONVERSATION_OPTIMIZATION=true

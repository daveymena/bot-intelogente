# ===== CONFIGURACIÓN PARA EASYPANEL/PRODUCCIÓN =====

# Base de datos (EasyPanel PostgreSQL)
# Formato: postgresql://usuario:contraseña@host:5432/nombre_base_datos
# Ejemplo EasyPanel: postgresql://postgres:tu_password@postgres:5432/botwhatsapp
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://postgres:password@postgres:5432/botwhatsapp

# Configuración general
NODE_ENV=production
PORT=3000

# Autenticación
NEXTAUTH_SECRET=tu-secret-key-super-seguro-aqui-cambiar
NEXTAUTH_URL=https://tu-app.onrender.com

# Inteligencia Artificial
GROQ_API_KEY=tu_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MAX_TOKENS=350
GROQ_TIMEOUT=5000

# OpenRouter (Recomendado para producción)
OPENROUTER_API_KEY=tu_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Ollama (IA Local en VPS - Gratis y Rápido)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=30000

# Configuración de IA
AI_PROVIDER=ollama
DEFAULT_AI_PROVIDER=ollama
AI_FALLBACK_ENABLED=true
AI_FALLBACK_ORDER=ollama,openrouter,groq

# WhatsApp
WHATSAPP_PROVIDER=baileys
SESSION_PATH=/opt/render/project/src/whatsapp-sessions

# Puppeteer (para Render)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
PUPPETEER_HEADLESS=true
PUPPETEER_SANDBOX=false

# Configuración de negocio
BUSINESS_ADDRESS=Tu dirección comercial
BOT_NAME=Smart Sales Bot
BOT_PHONE=+57 300 000 0000
BOT_LANGUAGE=es

# Características
PHOTOS_ENABLED=true
AUDIO_ENABLED=true
HOT_RELOAD_ENABLED=true
AI_ENABLED=true
DYNAMIC_PRICING_ENABLED=true

# Admin
ADMIN_EMAIL=tu@email.com
ADMIN_PASSWORD=tu-password-seguro

# Logging
LOG_LEVEL=info
LOG_CONNECTION_EVENTS=true

# Reconexión
HEARTBEAT_INTERVAL=10000
RECONNECT_ATTEMPTS_MAX=100
ENABLE_CONNECTION_MONITOR=true

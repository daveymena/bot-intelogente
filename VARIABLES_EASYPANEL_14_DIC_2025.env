# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
NEXTAUTH_SECRET=tu_nextauth_secret_aqui
NEXTAUTH_URL=https://tu-dominio.easypanel.host

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 6. EMAIL (Opcional - para verificación)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
RESEND_API_KEY=tu_resend_api_key_aqui
EMAIL_FROM=noreply@tu-dominio.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 7. PAGOS (Opcional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_token_aqui
PAYPAL_CLIENT_ID=tu_paypal_client_id_aqui
PAYPAL_CLIENT_SECRET=tu_paypal_secret_aqui

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 8. CONFIGURACIÓN DEL BOT
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Búsqueda Específica (NUEVO - 14 DIC 2025)
SEARCH_SPECIFIC_LIMIT=1
SEARCH_GENERAL_LIMIT=3

# Fotos Automáticas
AUTO_SEND_PHOTOS=true
PHOTOS_BASE_PATH=/app/public/fotos

# Formato de Respuestas
USE_PROFESSIONAL_FORMAT=true
REMOVE_ASTERISKS=true


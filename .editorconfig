# EditorConfig - Configuración que TODOS los editores deben respetar
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# CRÍTICO: NO formatear automáticamente
# NO organizar imports automáticamente
# NO aplicar code actions automáticamente
